{
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
      "default_title": "Doshibu_Add-On"
  },
  "description": "Doshibu's first add-on on Mozilla's browser application, Firefox",
  "homepage_url": "https://github.com/Doshibu/doshibu_Add-On",
  "manifest_version": 2,
  "name": "Doshibu Add-On",
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },
  "permissions": ["storage"],
  "version": "1.1",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [{
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }]
}
